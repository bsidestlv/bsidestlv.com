---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PageHero from '../../components/PageHero.astro';
import site from '../../data/site.json';
---

<BaseLayout title="Call for Papers">
  <PageHero
    title="Call for Papers"
    subtitle="Share your research, tools, and ideas with the BSidesTLV community."
    tag="CFP 2026"
  />

  <div class="section-container pb-24">
    <div class="mx-auto max-w-2xl">
      <div class="card p-8 text-center">
        <div
          class="bg-brand-950 border-brand-800 mb-6 inline-flex h-16 w-16 items-center justify-center rounded-full border"
        >
          <svg class="text-brand-400 h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"
            ></path>
          </svg>
        </div>

        <h2 class="font-display mb-4 text-2xl font-bold text-white">
          Submit your talk or workshop
        </h2>
        <p class="mb-8 leading-relaxed text-gray-400">
          BSidesTLV welcomes talks on offensive and defensive security, malware analysis, reverse
          engineering, hardware hacking, privacy, and anything in between. English is preferred to
          accommodate our international community.
        </p>

        <a
          href={site.cfpUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="btn-primary px-8 py-3.5 text-base"
        >
          Submit via CFP portal
          <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
            ></path>
          </svg>
        </a>
      </div>

      <div class="mt-8 grid grid-cols-1 gap-4 sm:grid-cols-3">
        {
          [
            { title: 'Talk', desc: '20 or 40 minute presentations on any security topic' },
            { title: 'Workshop', desc: 'Hands-on technical workshops and training sessions' },
            { title: 'Demo', desc: 'Live demonstrations of tools, techniques, or research' },
          ].map((item) => (
            <div class="card p-5 text-center">
              <h3 class="font-display mb-2 font-semibold text-white">{item.title}</h3>
              <p class="text-sm leading-relaxed text-gray-400">{item.desc}</p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</BaseLayout>

---
interface Stat {
  label: string;
  value: string;
}

interface Props {
  stats: Stat[];
}

const { stats } = Astro.props;
---

<section class="border-y border-gray-800 bg-gray-900/50">
  <div class="section-container py-8">
    <div class="grid grid-cols-2 gap-6 lg:grid-cols-4 lg:gap-0 lg:divide-x lg:divide-gray-800">
      {
        stats.map((stat) => (
          <div class="flex flex-col items-center px-4 py-2 text-center">
            <span class="font-display text-4xl font-bold tracking-wide text-white sm:text-5xl">
              {stat.value}
            </span>
            <span class="mt-1 text-sm font-medium tracking-widest text-gray-400 uppercase">
              {stat.label}
            </span>
          </div>
        ))
      }
    </div>
  </div>
</section>

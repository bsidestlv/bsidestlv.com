---
interface Props {
  name: string;
  class?: string;
}

const { name, class: className = 'h-3.5 w-3.5' } = Astro.props;

// Normalize Sessionize linkType values and team.json names to canonical keys
const kind = (() => {
  switch (name) {
    case 'Twitter':
    case 'Twitter_X':
      return 'twitter';
    case 'LinkedIn':
      return 'linkedin';
    case 'GitHub':
      return 'github';
    case 'Site':
    case 'Blog':
    case 'Company_Website':
      return 'globe';
    default:
      return 'link';
  }
})();
---


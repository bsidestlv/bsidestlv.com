{
	"extends": [
		"schedule:nonOfficeHours",
		"npm:unpublishSafe"
	],
	"baseBranches": ["master", "2021", "2020"],
	"platformAutomerge": true,
	"automerge": true,
	"major": {
		"automerge": false
	},
	"masterIssue": true,
	"semanticCommits": true,
	"semanticCommitType": "build",
	"prConcurrentLimit": 3,
	"separateMajorMinor": false,
	"timezone": "Asia/Jerusalem",
	"rangeStrategy": "pin",
	"packageRules": [{
		"managers": [
			"npm"
		],
		"updateTypes": [
			"digest"
		],
		"enabled": true
	}]
}
